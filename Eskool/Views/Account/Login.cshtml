<!-- Custom Theme Scripts -->
<script src="@Url.Content("~/build/js/custom.min.js")"></script>
<script>


    $(document).ready(function () {
        var errorMsg = $("#lblError").text();
        if (errorMsg && errorMsg != null && errorMsg != "") {
            $("#divErrorArea").fadeIn();
            $("#divErrorArea").fadeIn("slow");
            $("#divErrorArea").fadeOut(10000);
        }
    });
    const inputs = document.querySelectorAll(".input");


    function addcl() {
        let parent = this.parentNode.parentNode;
        parent.classList.add("focus");
    }

    function remcl() {
        let parent = this.parentNode.parentNode;
        if (this.value == "") {
            parent.classList.remove("focus");
        }
    }


    inputs.forEach(input => {
        input.addEventListener("focus", addcl);
        input.addEventListener("blur", remcl);
    });



    //var errorMsg = $("#lblError").text();
    //if (errorMsg && errorMsg != null && errorMsg != "") {

    //    $("#divErrorArea").fadeIn();
    //    $("#divErrorArea").fadeIn("slow");
    //    $("#divErrorArea").fadeOut(10000);

    //}







    function DoLogin() {


        var userName = document.getElementById("tbxUserName").value; /* $("#tbxUserName").val();*/
        var Password = document.getElementById("tbxUserName").value; /*$("#tbxPassword").val();*/

        if (userName == "" || Password == "") {

            $("#lblError").text("Enter User ID & Password");

            $("#divErrorArea").fadeIn();
            $("#divErrorArea").fadeIn("slow");
            $("#divErrorArea").fadeOut(10000);

            return false;

        }

        return true;

    }

</script>